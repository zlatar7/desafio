<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"/>
    <link rel="stylesheet" href="/styles.css" />
    <title>{{title}}</title>
  </head>
  <body class="d-flex flex-column justify-content-between align-items-center bg-primary-subtle" style="background-size: contain ;background-repeat: round ;background-image: url('https://img.freepik.com/free-photo/wall-made-vertical-brown-wooden-planks_181624-7671.jpg?t=st=1708910983~exp=1708914583~hmac=9e59a242f1f77afdab04359512d2fe2f56b49e2240d39d45804f096256ad52c2&w=740'); background-size: cover;">
    <nav class="navbar navbar-expand-md w-100" style="background-color: #01084bea; position: fixed; z-index: 1;">
      <div class="container-fluid">
        <a class="fs-5 m-1 me-3" href="/"><img src="/images/logo.png" height="65" alt="logo"/></a>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            {{! <a class="btn btn-light fs-5 m-1" href="/real">Real</a> }}
            {{#if logged}}
              <a class="btn btn-light m-1" href="/orders" id="ordersButton">CART</a>
            {{/if}}
            {{#if admin}}
              <a class="btn btn-light m-1" href="/form" id="formButton">FORM</a>
            {{/if}}
            {{#if button}}
              <span class="btn btn-light m-1" id="signout">SIGN OUT</span>
            {{/if}}
            {{#if notLogged}}
              <a class="btn m-1 btn-light" id="loginButton" href="/auth/login">LOGIN</a>
              <a class="btn m-1 btn-light" id="registerButton" href="/auth/register">REGISTER</a>
            {{/if}}
          </div>
        </div>
      </div>
    </nav>
    {{{body}}}
    <footer class="w-100" style="background-color: #01084bea; margin-top: 2em;">
      <p class="text-secondary m-2 text-center fw-bolder fs-4">AZUL AZUL</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/scripts/signout.js"></script>
  </body>
</html>